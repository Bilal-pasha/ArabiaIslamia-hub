# Database (PostgreSQL - separate DBs per project)
DB_HOST=localhost
DB_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme

# Project-specific database names (optional override)
# HUFFAZ_DB_NAME=huffaz_db
# SECONDARY_DB_NAME=secondary_db

# JWT (shared across all API servers)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth (optional, for sign-in with Google)
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Caddy / SSL (domain: jamiaarabiaislamia.com)
# Subdomains: jamiaarabiaislamia.com (main), huffaz.jamiaarabiaislamia.com, secondary.jamiaarabiaislamia.com
CADDY_EMAIL=admin@jamiaarabiaislamia.com
HTTP_PORT=80
HTTPS_PORT=443

# Docker registry (for production deployment)
# REGISTRY=ghcr.io
# IMAGE_NAME_LOWER=your-org/arabiaaislamia-hub
# POSTGRES_DB=postgres

# Redis (optional, for sessions/cache)
REDIS_PASSWORD=redis
REDIS_PORT=6379

# Backend API URLs (production: dedicated subdomains)
# SECONDARY_API_URL=https://api.secondary.jamiaarabiaislamia.com
# HUFFAZ_API_URL=https://api.huffaz.jamiaarabiaislamia.com

# Frontend API base URL (production: point to API subdomain)
# Secondary UI: NEXT_PUBLIC_API_URL=https://api.secondary.jamiaarabiaislamia.com
NEXT_PUBLIC_API_URL=http://localhost:8002
# Huffaz UI (if used): NEXT_PUBLIC_API_URL=https://api.huffaz.jamiaarabiaislamia.com (paths use /api/...)
# NEXT_PUBLIC_API_URL_HUFFAZ=http://localhost:8001

# Cloudflare R2 (for file uploads - admission documents)
# R2_ACCOUNT_ID=your-cloudflare-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET_NAME=admission-files
