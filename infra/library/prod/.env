# Library server - set strong values for production (especially POSTGRES_PASSWORD, JWT_*).

REGISTRY=ghcr.io
IMAGE_NAME_LOWER=bilal-pasha/arabiaislamia-hub

POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-secure-password
LIBRARY_DB_NAME=library_db

JWT_SECRET=change-me-jwt-secret
JWT_REFRESH_SECRET=change-me-jwt-refresh-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

COOKIE_DOMAIN=.jamiaarabiaislamia.com
CORS_ORIGIN=https://library.jamiaarabiaislamia.com

HTTP_PORT=80
HTTPS_PORT=443

NEXT_PUBLIC_LIBRARY_API_URL=https://api.library.jamiaarabiaislamia.com